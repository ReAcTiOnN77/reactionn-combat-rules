<fieldset>
  <legend>{{localize "RCR.Settings.Flanking.Legend"}}</legend>

  <div class="form-group">
    <label>{{localize "RCR.Settings.EnableFlanking.Name"}}</label>
    <input type="checkbox" name="enableFlanking" {{checked enableFlanking}}>
    <p class="hint">{{localize "RCR.Settings.EnableFlanking.Hint"}}</p>
  </div>

  <div class="form-group">
    <label>{{localize "RCR.Settings.FlankingBehaviour.Name"}}</label>
    <select name="flankingBehaviour">
      {{selectOptions advChoices selected=flankingBehaviour}}
    </select>
    <p class="hint">{{localize "RCR.Settings.FlankingBehaviour.Hint"}}</p>
  </div>

  <div class="form-group">
    <label>{{localize "RCR.Settings.FlankingRequiresActive.Name"}}</label>
    <input type="checkbox" name="flankingRequiresActive" {{checked flankingRequiresActive}}>
    <p class="hint">{{localize "RCR.Settings.FlankingRequiresActive.Hint"}}</p>
  </div>
</fieldset>
